# Database Configuration
# Prisma connection string used by the backend. Update placeholders as needed.
# Example with explicit credentials:
# DATABASE_URL="postgresql://USER:PASS@localhost:5432/real_estate_crm?schema=real_estate_crm"
# Example using peer auth (macOS default):
DATABASE_URL="postgresql://localhost:5432/real_estate_crm?schema=real_estate_crm"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=real_estate_crm
DB_USER=postgres
DB_PASSWORD=password

# Production Database (if different)
PROD_DB_HOST=prod-db.example.com
PROD_DB_PORT=5432
PROD_DB_NAME=real_estate_crm_prod
PROD_DB_USER=analytics_user
PROD_DB_PASSWORD=secure_password

# BigQuery Configuration (if using)
BQ_PROJECT=real-estate-analytics
BQ_DATASET=real_estate_analytics
BQ_KEYFILE=/path/to/service-account.json
BQ_LOCATION=US

# dbt Configuration
DBT_PROFILES_DIR=./data/warehouse
DBT_PROJECT_DIR=./data/warehouse
DBT_TARGET=dev

# Airflow Configuration
AIRFLOW_HOME=./data/pipeline/airflow
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql://user:pass@localhost/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=True

# Metabase Configuration
MB_DB_TYPE=postgres
MB_DB_DBNAME=real_estate_crm
MB_DB_PORT=5432
MB_DB_USER=postgres
MB_DB_PASS=password
MB_DB_HOST=localhost

# Alerting Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX
ALERT_EMAIL=alerts@aqaraty.com
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@aqaraty.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=alerts@aqaraty.com

# Security Configuration
JWT_SECRET=your_jwt_secret_key
SESSION_SECRET=your_session_secret_key
# Optional overrides for the PostgreSQL-backed session store
# SESSION_SCHEMA=public
# SESSION_TABLE=session
ENCRYPTION_KEY=your_encryption_key

# Analytics Configuration
DEFAULT_TIMEZONE=Asia/Riyadh
ENABLE_PII_MASKING=true
CONTACT_SLA_MINUTES=30
FIRST_CLAIM_SLA_MINUTES=60
BUYER_SATURATION_THRESHOLD=3

# Data Freshness Thresholds (in hours)
CLAIM_FRESHNESS_HOURS=1
LEAD_FRESHNESS_HOURS=2
PROPERTY_FRESHNESS_HOURS=24

# Alert Thresholds
BUYER_BACKLOG_THRESHOLD=50
SLA_BREACH_RATE_THRESHOLD=10
RLS_DENIAL_THRESHOLD=20
IMPERSONATION_THRESHOLD=5
PAYMENT_FAILURE_RATE_THRESHOLD=5

# Monitoring Configuration
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_URL=http://localhost:3001
ELASTICSEARCH_URL=http://localhost:9200

# External API Keys
STRIPE_API_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token

# Development Configuration
DEBUG=true
LOG_LEVEL=INFO
ENABLE_QUERY_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Production Configuration
# DEBUG=false
# LOG_LEVEL=WARNING
# ENABLE_QUERY_LOGGING=false
# ENABLE_PERFORMANCE_MONITORING=true
