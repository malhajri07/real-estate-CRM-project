{
  "include": ["apps/web/src/**/*", "packages/shared/**/*", "apps/api/**/*"],
  "exclude": [
    "node_modules", 
    "build", 
    "dist", 
    "**/*.test.ts",
    "apps/api/populateDatabase.ts",
    "apps/api/seedData.ts",
    "apps/api/testRoleSystem.ts",
    "apps/api/import-saudi-customers.ts",
    "apps/api/roleRoutes.ts",
    "apps/api/lib/seeds/**/*"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "target": "ES2020",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./apps/web/src/*"],
      "@shared/*": ["./packages/shared/*"]
    }
  }
}
